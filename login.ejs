<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-map-signs"></i> Sign in</h1>
            <% include ./partials/messages %>
            <form action="/users/login" method="POST">
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter e-mail..." />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter password..." />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Sign in</button>
            </form>
            <p class="lead mt-4">
                You have no account? <a href="/users/register">Please, register</a>
            </p>
        </div>
    </div>
</div>